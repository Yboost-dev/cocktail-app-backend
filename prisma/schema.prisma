generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Article {
  id                 Int                 @id @default(autoincrement())
  title              String              @unique
  description        String?
  published          Boolean             @default(false)
  createdAt          DateTime            @default(now())
  updatedAt          DateTime            @updatedAt
  articleIngredients ArticleIngredient[] // Relation avec ArticleIngredient
}

model Ingredient {
  id                 Int                 @id @default(autoincrement())
  name               String              @unique
  quantity           Float // Quantité totale de cet ingrédient (par exemple, 1000 ml)
  unit               String // Unité (par exemple, ml ou g)
  articleIngredients ArticleIngredient[] // Relation avec ArticleIngredient
}

model ArticleIngredient {
  id           Int        @id @default(autoincrement())
  article      Article    @relation(fields: [articleId], references: [id], onDelete: Cascade)
  articleId    Int
  ingredient   Ingredient @relation(fields: [ingredientId], references: [id], onDelete: Cascade)
  ingredientId Int
  quantity     Float // Quantité spécifique utilisée dans cet article (par exemple, 1 ml pour le rhum)

  @@unique([articleId, ingredientId]) // Pour éviter les doublons d'association
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  firstname String
  lastname  String
  role      String
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
